{% extends 'base.html.twig' %}

{% block title %}All Rentals{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
  <div class="flex items-center justify-between mb-4 gap-4" >
    <h1 class="text-3xl">Rentals</h1>
    <a href="{{ path('app_rental_create') }}"
       class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
      + New Rental
    </a>
  </div>

  <div class="overflow-x-auto bg-white shadow rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Start Date
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            End Date
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Cost
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Car
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Paid On
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Amount
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {% for rental in rentals %}
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              {{ rental.startDate|date('Y-m-d H:i') }}
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{ rental.endDate|date('Y-m-d H:i') }}
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{ rental.cost|number_format(2, '.', ',') }} MAD
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{ rental.customer.fullName }}
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {% if rental.car %}
                {{ rental.car.brand }} {{ rental.car.model }} ({{ rental.car.year }})
              {% else %}
                â€”  
              {% endif %}
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{ rental.payment.paymentDate|date('Y-m-d') }}
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{ rental.payment.amount|number_format(2, '.', ',') }} MAD
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
              <a href="{{ path('app_rental_view', {id: rental.id}) }}"
                 class="text-indigo-500 hover:text-indigo-500">View</a>
              <a href="{{ path('app_rental_edit', {id: rental.id}) }}"
                 class="text-green-600 hover:text-green-900">Edit</a>
              {# <a href="{{ path('app_rental_delete', {id: rental.id}) }}"
                 class="text-red-600 hover:text-red-900"
                 onclick="return confirm('Really delete this rental?');">
                Delete
              </a> #}
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="8" class="px-6 py-4 text-center text-gray-500">
              No rentals found.
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
