{% extends 'base.html.twig' %}

{% block title %}Customers List{% endblock %}

{% block body %}
	<div class="example-wrapper py-8 bg-red-600">
        <div class="container mx-auto px-4">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 shadow-lg rounded-lg overflow-hidden">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Full Name
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Driver License
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                CIN
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for customer in customers %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ customer.fullName }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ customer.driverLicense }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ customer.cin }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td class="px-6 py-4 text-center" colspan="3">No customers found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
	</div>
{% endblock %}
