{# templates/customer/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
  <div class="container mx-auto px-4 py-6 max-w-lg">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Edit Customer</h1>

    {{ form_start(form, {"attr": {"class": "bg-white shadow rounded-lg p-6 space-y-6"}} )}}
      <div>
        {{ form_label(form.fullName, 'Full Name') }}
        {{ form_widget(form.fullName) }}
        {{ form_errors(form.fullName) }}
      </div>

      <div>
        {{ form_label(form.driverLicense, 'Driver License') }}
        {{ form_widget(form.driverLicense) }}
        {{ form_errors(form.driverLicense) }}
      </div>

      <div>
        {{ form_label(form.cin, 'CIN') }}
        {{ form_widget(form.cin) }}
        {{ form_errors(form.cin) }}
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
