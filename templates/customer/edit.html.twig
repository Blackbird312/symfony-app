{% extends 'base.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-4">Edit Customer</h1>

    <form method="post" action="{{ path('app_customer_edit', {id: customer.id}) }}" class="space-y-4 bg-white shadow rounded-lg p-6">
        <div>
            <label class="block text-gray-700">Full Name</label>
            <input type="text" name="fullName" value="{{ customer.fullName }}"
                   class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" required>
        </div>
        <div>
            <label class="block text-gray-700">Driver License</label>
            <input type="text" name="driverLicense" value="{{ customer.driverLicense }}"
                   class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" required>
        </div>
        <div>
            <label class="block text-gray-700">CIN</label>
            <input type="text" name="cin" value="{{ customer.cin }}"
                   class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" required>
        </div>
        <div class="flex space-x-2">
            <button type="submit"
                    class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">
                Save Changes
            </button>
            <a href="{{ path('app_customer_all') }}"
               class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
               Cancel
            </a>
        </div>
    </form>
</div>
{% endblock %}
