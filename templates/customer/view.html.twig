{% extends 'base.html.twig' %}

{% block title %}View Customer
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<h1 class="text-2xl font-bold mb-4">Customer Details</h1>
		<dl class="grid grid-cols-1 gap-4 bg-white shadow rounded-lg p-6">
			<div>
				<dt class="font-medium text-gray-700">Full Name</dt>
				<dd class="mt-1 text-gray-900">{{ customer.fullName }}</dd>
			</div>
			<div>
				<dt class="font-medium text-gray-700">Driver License</dt>
				<dd class="mt-1 text-gray-900">{{ customer.driverLicense }}</dd>
			</div>
			<div>
				<dt class="font-medium text-gray-700">CIN</dt>
				<dd class="mt-1 text-gray-900">{{ customer.cin }}</dd>
			</div>
		</dl>
		<div class="mt-6 flex gap-4" >
			<div >
				<a href="{{ path('app_customer_all') }}" class="inline-block bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">Back to list</a>
			</div>
			<div >
				<a href="{{ path('app_customer_edit', { id: customer.id }) }}') }}" class="inline-block bg-blue-500 hover:bg-gray-600 text-white px-4 py-2 rounded">Edit</a>
			</div>
		</div>
	{% endblock %}
