{# templates/car/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Car{% endblock %}

{% block body %}
  <div class="container mx-auto px-4 py-6 max-w-lg">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Edit Car</h1>

    {{ form_start(form, { attr: { class: 'bg-white shadow rounded-lg p-6 space-y-6' } }) }}

      <div>
        {{ form_label(form.brand, 'Brand') }}
        {{ form_widget(form.brand) }}
        {{ form_errors(form.brand) }}
      </div>

      <div>
        {{ form_label(form.model, 'Model') }}
        {{ form_widget(form.model) }}
        {{ form_errors(form.model) }}
      </div>

      <div>
        {{ form_label(form.year, 'Year') }}
        {{ form_widget(form.year) }}
        {{ form_errors(form.year) }}
      </div>

      <div>
        {{ form_label(form.carLicense, 'License Plate') }}
        {{ form_widget(form.carLicense) }}
        {{ form_errors(form.carLicense) }}
      </div>

      <div class="flex items-center space-x-2">
        {{ form_widget(form.available) }}
        {{ form_label(form.available, 'Available') }}
        {{ form_errors(form.available) }}
      </div>

    {{ form_end(form) }}
  </div>
{% endblock %}
